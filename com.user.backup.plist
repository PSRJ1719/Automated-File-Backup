<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
  <dict>
    <key>Label</key>
    <string>com.user.backup</string>
    <key>ProgramArguments</key>
    <array>
      <string>/usr/bin/python3</string>  <!-- Replace with your Python interpreter path -->
      <string>/path/to/your/script.py</string>  <!-- Replace with your script path -->
    </array>
    <key>StartCalendarInterval</key>
    <dict>
      <key>Hour</key>
      <integer>19</integer>  <!-- Replace with your desired backup time -->
      <key>Minute</key>
      <integer>0</integer>
    </dict>
    <key>StandardOutPath</key>
    <string>/tmp/com.user.backup.out</string>
    <key>StandardErrorPath</key>
    <string>/tmp/com.user.backup.err</string>
    <key>RunAtLoad</key>
    <true/>
  </dict>
</plist>
